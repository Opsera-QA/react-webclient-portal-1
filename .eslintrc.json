{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "prettier",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "require": "readonly",
        "process": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "settings": {
     "import/resolver": {
       "node": {
         "paths": ["src"]
       }
     },
      "react": {
        "version": "detect"
      }
    },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": "warn",
    "react/prop-types": "error",
    "react/no-unescaped-entities": "error",
    "react/display-name": "error",
    "react/jsx-no-target-blank": "error",
    "no-prototype-builtins": "warn",
    "no-useless-escape": "warn",
    "no-empty-pattern": "warn",
    "no-fallthrough": "warn"
  }
}